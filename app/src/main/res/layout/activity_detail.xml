<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity_Detail"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="330dp"
        android:orientation="vertical"
        android:background="@drawable/cover_highly_compressed"

        >
        <ImageButton
            android:id="@+id/backToMain"
            android:layout_width="101dp"
            android:layout_height="51dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/back" />

        <ImageButton
            android:id="@+id/camkbtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/cam"
            android:layout_gravity="end"
            android:gravity="end"
            android:layout_marginVertical="205dp"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monstera Adanonsii"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:textSize="30dp"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Introduction"
        android:layout_gravity="start"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:textColor="@color/black"/>

     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/plant_detail"
        android:layout_gravity="start"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:textColor="@color/textHalfBlack"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Photo Album"
        android:layout_gravity="start"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_gravity="start"
        android:src="@drawable/plantgroup_highly_compressed"/>






</LinearLayout>




