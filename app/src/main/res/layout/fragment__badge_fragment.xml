<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/halfWhite"
    android:orientation="vertical"
    tools:context=".ui.Badge.Fragment_Badge">

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="175dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/soft_rounded"
        android:backgroundTint="@color/white"
        android:elevation="8dp"

        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="20dp"
            android:background="@drawable/soft_rounded"
            android:backgroundTint="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Plants Home"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="Second Month"
                android:textColor="@color/black" />


            <Button
                android:id="@+id/btnbadgestart"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_rounded"
                android:backgroundTint="@color/lightGreen"
                android:paddingHorizontal="40dp"
                android:text="Start"
                android:textColor="@color/black"
                app:backgroundTint="@color/lightGreen" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_gravity="end"
        android:layout_marginTop="120dp"
        android:background="@drawable/button_rounded"
        android:backgroundTint="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Congratulation you earn a badge"
            android:textColor="@color/lightGreen" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/mybadge"


            />


    </LinearLayout>
</LinearLayout>

